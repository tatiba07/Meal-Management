<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_folder_24"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Food Database"
            android:textColor="@color/normalText"
            android:textSize="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"/>
    </LinearLayout>
<HorizontalScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/beta1">
            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="　　"
                android:textStyle="bold"
                android:textColor="@color/deep"
                android:textSize="14dp"
                android:gravity="center"
                android:layout_marginStart="10dp"/>
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Food"
                android:textStyle="bold"
                android:textColor="@color/deep"
                android:textSize="14dp"
                android:gravity="center" />
            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="Per"
                android:textStyle="bold"
                android:textColor="@color/deep"
                android:textSize="14dp"
                android:gravity="center" />
            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="Calorie"
                android:textStyle="bold"
                android:textColor="@color/deep"
                android:textSize="14dp"
                android:gravity="center" />
            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="Carbo"
                android:textStyle="bold"
                android:textColor="@color/deep"
                android:textSize="14dp"
                android:gravity="center" />
            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="Protein"
                android:textStyle="bold"
                android:textColor="@color/deep"
                android:textSize="14dp"
                android:gravity="center" />
            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="Fat"
                android:textStyle="bold"
                android:textColor="@color/deep"
                android:textSize="14dp"
                android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycle_database"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="3"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/btn_foodAdd"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Add"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_marginTop="10dp"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/shape_round_button"/>
        <Button
            android:id="@+id/btn_foodEdit"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Edit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/shape_round_button"/>
        <Button
            android:id="@+id/btn_foodDelete"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Delete"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_marginTop="10dp"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/shape_round_button"/>
    </LinearLayout>

</LinearLayout>