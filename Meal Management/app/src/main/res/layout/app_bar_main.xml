<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityMain"
    android:background="@color/background2">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.DietManagement.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            app:titleTextColor="@color/normalText"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/background2"
            app:popupTheme="@style/Theme.DietManagement.PopupOverlay" />
    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/shape_round_corners">
        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:id="@+id/txt_calorieNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24dp"
                    android:text="0"
                    android:textColor="@color/normalText"
                    android:gravity="center"
                    android:layout_gravity="center" />
                <TextView
                    android:id="@+id/txt_calLeft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:importantForAccessibility="no"
                    android:text="Calories Left"
                    android:textSize="12dp"
                    android:textColor="@color/normalText"
                    tools:ignore="TextSizeCheck" />
            </LinearLayout>
            <ProgressBar
                android:id="@+id/progress_calorie"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:indeterminate="false"
                android:max="100"
                android:progress="0"
                android:rotation="0"
                android:progressDrawable="@drawable/progressbar_circle" />
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:gravity="top"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/txt_carbonNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20dp"
                    android:textColor="@color/normalText"
                    android:layout_weight="1.5"
                    android:gravity="bottom"
                    android:layout_gravity="bottom"/>
                <TextView
                    android:id="@+id/txt_carLeft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="g   Left"
                    android:textSize="12dp"
                    android:textColor="@color/normalText"
                    tools:ignore="TextSizeCheck" />
            </LinearLayout>
            <ProgressBar
                android:id="@+id/progress_carbon"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_weight="1"
                android:progress="0"
                android:progressDrawable="@drawable/progressbar_horizontal"
                style="?android:attr/progressBarStyleHorizontal" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Carbo"
                android:textSize="12dp"
                android:textColor="@color/normalText"
                tools:ignore="TextSizeCheck" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/txt_proteinNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20dp"
                    android:textColor="@color/normalText"
                    android:layout_weight="1.5"
                    android:gravity="bottom"
                    android:layout_gravity="bottom"/>
                <TextView
                    android:id="@+id/txt_proLeft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="g   Left"
                    android:textSize="12dp"
                    android:textColor="@color/normalText"
                    tools:ignore="TextSizeCheck" />
            </LinearLayout>
            <ProgressBar
                android:id="@+id/progress_protein"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_weight="1"
                android:progress="0"
                android:progressDrawable="@drawable/progressbar_horizontal"
                style="?android:attr/progressBarStyleHorizontal" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Protein"
                android:textSize="12dp"
                android:textColor="@color/normalText"
                tools:ignore="TextSizeCheck" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/txt_fatNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20dp"
                    android:layout_weight="1.5"
                    android:gravity="bottom"
                    android:textColor="@color/normalText"
                    android:layout_gravity="bottom"/>
                <TextView
                    android:id="@+id/txt_fatLeft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="g   Left"
                    android:textSize="12dp"
                    android:textColor="@color/normalText"
                    tools:ignore="TextSizeCheck" />
            </LinearLayout>
            <ProgressBar
                android:id="@+id/progress_fat"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_weight="1"
                android:progress="0"
                android:progressDrawable="@drawable/progressbar_horizontal"
                style="?android:attr/progressBarStyleHorizontal" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Fat"
                android:textSize="12dp"
                android:textColor="@color/normalText"
                tools:ignore="TextSizeCheck" />
        </LinearLayout>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_meal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimaryDark"
        app:cardElevation="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_meal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background2"/>

    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/btn_mealAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:gravity="center"
        android:text="Meal"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:paddingStart="10dp"
        android:background="@drawable/shape_round_button"
        android:drawableLeft="@drawable/ic_add_circle_24"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"/>

</LinearLayout>