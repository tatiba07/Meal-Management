<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DietManagement" parent="Theme.AppCompat.DayNight">
        <!-- Primary brand color. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/background2</item>
        <item name="colorOnPrimary">@color/background2</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/background2</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>
    //toolbar theme
    <style name="MyDarkToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorSecondary">@color/normalText</item>
        <!--<item name="popupTheme">@style/PopupMenuStyle</item>-->
        <item name="actionButtonStyle">@color/normalText</item>
    </style>
</resources>